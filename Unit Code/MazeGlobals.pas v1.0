unit MazeGlobals(-7152);interface {$R-} {$U-} {$I-} {$U Jim Surine:Programming:Units:My Units:Dialogs} {$O Jim Surine:Programming:Units:My Units:MazeGlobals} uses Memtypes,            {Basic types stanadard} QuickDraw,           {Quickdraw standard} OSIntf,              {Operating system standard} ToolIntf,            {Tools standard}  PackIntf,            {Package stuff (List Manager, Decimal to string convert)} sane,                {For Real number conversions}  PasInOut,  Dialogs;  const    XMazeMax=4;    YMazeMax=4;    ZMazeMax=4;    XMazeGridMax=9;    YMazeGridMax=9;    ZMazeGridMax=9;        XDrawMax=8;    YDrawMax=8;    ZDrawMax=3;        NumberOfPlotsMax=255;    NumberofSidesMax=4;    NumberOfPointsMax=30;        NumberOfViewOrdersMax=3;    NumberOfViewsMax=50;        NumberOfShapesMax=255;    type   {Maze}      MazePointType=     packed        record            Side:array [0..4] of byte;            ViewOrder,            OutsideLightEffectiveness,ExternalLightEffectiveness,            InternalLight:Byte;        end;           MazeGridHandle=^MazeGridPointer;   MazeGridPointer=^MazeGridType;   MazeGridType=     packed         array [0..XMazeGridMax,0..YMazeGridMax,0..ZMazeGridMax] of             MazePointType;      MazeType =     packed        array [0..XMazeMax,0..YMazeMax,0..ZMazeMax] of            MazeGridHandle;               {Plot Definitions}      BytePoint=      packed record        x,y:byte;     end;         PlotDefinitionType=        packed             record                NumberOfPoints:byte;                Points:                     packed                         array [0..NumberOfPointsMax] of                             BytePoint;            end;       PlotDefinitionsType=       packed             array [0..NumberOfPlotsMax] of                PlotDefinitionType;      {Draw Plots}      DrawPlotHandle=^DrawPlotPointer;   DrawPlotPointer=^DrawPlotType;   DrawPlotType=     packed array [0..XDrawMax,0..XDrawMax,0..XDrawMax,0..NumberofSidesMax] of        packed record            regionHandle:rgnHandle;            PolygonHandle:PolyHandle;        end;            DrawPlotsType=        Packed             Array [0..NumberOfPlotsMax] of                DrawPlotHandle;        {View Order}        ViewPlotType=        packed            record                X,Y,Z,Side,ExtrenalLightIntensity:byte;            end;                ViewOrderType=        packed             array [0..NumberOfViewsMax] of                ViewPlotType;                    ViewOrdersType=        packed            array [0..NumberOfViewOrdersMax] of                ViewOrderType;                   {Shapes}       ShapeType=        Packed            Record                Plot,                PlotColor,                RegionPolygon:byte;            end;                ShapesType=        packed array [0..NumberOfShapesMax] of            ShapeType;var    TheMaze:MazeType;    ThePlotDefinitions:PlotDefinitionsType;    TheDrawPlots:DrawPlotsType;    TheViewOrders:ViewOrdersType;    TheShapes:ShapesType;    implementationbeginend.