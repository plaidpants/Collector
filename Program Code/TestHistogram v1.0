Program TestHistogram(input,Output);  {$U Jim Surine:Programming:Units:My Units:Dialogs} {$U Jim Surine:Programming:Units:My Units:Patterns} {$U Jim Surine:Programming:Units:My Units:Axis2} {$U Jim Surine:Programming:Units:My Units:Histogram} {$R Jim Surine:Programming:Reasources:Collector.Rsrc} {$S+} {$I-} uses  Memtypes,            {Basic types stanadard} QuickDraw,           {Quickdraw standard} OSIntf,              {Operating system standard} ToolIntf,            {Tools standard} PackIntf,            {Package stuff (List Manager, Decimal to string convert)} sane,                {For Real number conversions} {$S Two}  Patterns, Dialogs, Axis2, Histogram;var    test:integer;    Histogram : HistogramType;    Numbers : Integer;    i:integer;    Quit:boolean;    Port:windowPtr;    Reply:SFReply;    Number:LongInt;    begin     quit:=false;    GetPort(Port);    with Histogram.HistogramInfo do        begin        LowerDataBound := 0;        UpperDataBound := 100;        NumberOfDataBins := 100;                UpperdataInclude := true;        LowerdataInclude := true;                Title:='The Title Of This Histogram * The Note Of This Histogram';                LowerDisplayBound := 0;        UpperDisplayBound := 100;        NumberOfDisplayBins := 20;                UpperDisplayInclude := true;        LowerDisplayInclude := true;                LowerVerticleBound:=0;  {Default scaling}        UpperVerticleBound:=0;        end;     InitHistogram(Histogram,Port );        while not Quit do        begin            write('enter >');            readln(test);            case test of                0:DrawHistogram(Histogram,Port);                1:HistogramDisplayDialog(Histogram,Port);                2:HistogramDataDialog(Histogram,Port);                3:begin                    readln(Numbers);                    AddToHistogram(Histogram,Numbers,1,Port);                  end;                4:SaveHistogramAsText(Histogram,Reply,OutPut);                5:LoadHistogramAsText(Histogram,Reply,input);                6:                    begin                        GotoXY(1,1);                        EraseRect(Port^.PortRect);                    end;                7:Quit:=True;                8 :begin                     Readln(Number);                    for i:=1 to Number do                        AddToHistogram(Histogram,abs(Random/MaxInt*50)+abs(Random/MaxInt*50),1,Port);                  end;                 9:HistogramInfoDialog( Histogram );               otherwise                     OKDialog('hello');            end;        end;    CloseHistogram(Histogram);end.