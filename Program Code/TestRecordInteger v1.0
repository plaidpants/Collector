Program TestRecordReal(input,Output);  {$U Jim Surine:Programming:Units:My Units:Dialogs} {$U Jim Surine:Programming:Units:My Units:Patterns} {$U Jim Surine:Programming:Units:My Units:Axis2} {$U Jim Surine:Programming:Units:My Units:RecordReal} {$R Jim Surine:Programming:Reasources:Collector.Rsrc} uses  Memtypes,            {Basic types stanadard} QuickDraw,           {Quickdraw standard} OSIntf,              {Operating system standard} ToolIntf,            {Tools standard} PackIntf,            {Package stuff (List Manager, Decimal to string convert)} sane,                {For Real number conversions}  Patterns, Axis2, Dialogs, RecordReal;var    test:integer;    RecordReal : RecordRealType;    RecordRealInfo : RecordRealInfoType;    Numbers : RecordRealDataType;    i:integer;    Quit:boolean;    Port:windowPtr;    Reply:SFReply;        SetGetAdd:integer;    begin     quit:=false;    GetPort(Port);    with RecordRealInfo do        begin            NumberPerRecord := 3;            NumberToRecord:=100;            Title :='test record Real';            DrawOption :=0;        end;     InitRecordReal(RecordReal,RecordRealInfo );        while not Quit do        begin            setPort(port);            write('enter >');            readln(test);            case test of                0:DrawRecordReal(RecordReal);                1:RecordRealDisplayDialog(RecordReal.RecordRealInfo);                2:begin                    RecordRealDataDialog(RecordReal.RecordRealInfo);                    CloseRecordReal(RecordReal);                    RecordRealInfo:=RecordReal.RecordRealInfo ;                    InitRecordReal(RecordReal,RecordRealInfo );                  end;                3:begin                    for i:=1 to RecordReal.RecordRealInfo.NumberPerRecord do                        readln(Numbers[i]);                    AddToRecordReal(RecordReal,Numbers);                  end;                4:begin                    Readln(SetGetAdd);                    for i:=1 to RecordReal.RecordRealInfo.NumberPerRecord do                        readln(Numbers[i]);                    SetGetAddRecordReal(RecordReal,Numbers,SetGetAdd);                  end;                5:SaveRecordRealAsText(RecordReal,Reply,OutPut);                6:LoadRecordRealAsText(RecordReal,Reply,input);                7:Quit:=True;                otherwise                     OKDialog('hello');            end;        end;    CloseRecordReal(RecordReal);end.